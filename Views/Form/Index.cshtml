@model Contacto

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{ 
   ViewBag.Title = "FormContacto"; 
}  


<div class="container ">
  <div class="row ">
    <div class="col-12 ">
    <div class="mx-auto mt-3" style="width: 25rem;">
        <div class="card shadow bg-white rounded">
            <div class="card-header ">
                 <h3 class="card-title">Formulario de contacto</h3> 
            </div> 
            <div class="card-body">
                <form id="frmContac" method = "post" asp-controller = "Form" asp-action = "RegistrarForm" >
                    <fieldset>
                        <div class="form-group">
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                            <input asp-for="Nombre" class="form-control" placeholder="Nombre Contacto" name="Nombre" type="text" >
                        </div>
                        <div class="form-group">
                            <span asp-validation-for="Direccion" class="text-danger"></span>
                            <input asp-for="Direccion" class="form-control" placeholder="Dirección" name="Direccion" type="text">
                        </div>  
                      <div class="form-group">
                          <span asp-validation-for="Telefono" class="text-danger"></span>
                            <input asp-for="Telefono" class="form-control" placeholder="Teléfono" name="Telefono" type="text">
                        </div> 
                      <div class="form-group" >
                          <span asp-validation-for="Email" class="text-danger"></span>
                            <input asp-for="Email" class="form-control" placeholder="E-Mail" name="Email" >
                        </div> 
                        <input class="btn btn-sm btn-success" type="submit" value="Registrar" > 
                       
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
</div>
  </div>
  
</div>

<script>
var formObj = new ej.input.FormValidator("#frmContac");
formObj.validate();
    </script>